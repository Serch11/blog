<p id="notice"><%= notice %></p>

<%= render  @post %>

  <h2>Commets</h2>
  <div id="comments">
    <%= render @post.comments.reverse %>
  </div>
  <%= form_for [@post,Comment.new],remote: true do |f| %>
  <p>
    <%= f.label :body, "New Comments" %> <br />
    <%= f.text_area :body %> <br />
  </p>
<p><%= f.submit "Add comments" %></p>
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
